include 'dl/data/configs/data_enwik8.gin'
include 'dl/data/configs/tok_char.gin'

model_name = 'rnn-small'

batch_size = 32
max_seq_len = 32
learning_rate = 1e-4
train_steps = 100
log_steps = 10
eval_interval = 10
